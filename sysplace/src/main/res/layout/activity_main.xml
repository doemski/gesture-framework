<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    android:background="#f9f9f9"
    tools:context="hs_mannheim.sysplace.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_sendPhoto"
        android:id="@+id/btn_send_photo"
        android:clickable="true"
        android:enabled="false"
        android:onClick="switchToConnectedActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <!--<ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/connection_icon"
        android:id="@+id/connection_icon"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/plug"
        android:elevation="32dp"
        android:id="@+id/plug"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/socket"
        android:elevation="32dp"
        android:id="@+id/socket"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

</RelativeLayout>
