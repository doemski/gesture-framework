<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    android:background="#c0c0cc"
    tools:context="hs_mannheim.sysplace.MainActivity">

    <!--
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="test"/>
    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Connected"
        android:id="@+id/textView"
        android:layout_alignEnd="@+id/btn_disconnect"
        android:layout_alignParentStart="true"
        android:textSize="32dp"
        android:textColor="@android:color/holo_red_light"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_disconnect"
        android:text="@string/btn_disconnect"
        android:enabled="false"
        android:onClick="disconnect"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_sendPhoto"
        android:id="@+id/btn_send_photo"
        android:clickable="true"
        android:enabled="false"
        android:onClick="switchToConnectedActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_ping"
        android:enabled="false"
        android:onClick="ping"
        android:id="@+id/btn_ping"
        android:layout_alignTop="@+id/btn_disconnect"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_tosend"
        android:layout_above="@+id/btn_disconnect"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/plug"
        android:elevation="32dp"
        android:id="@+id/plug"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/socket"
        android:elevation="32dp"
        android:id="@+id/socket"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

</RelativeLayout>
