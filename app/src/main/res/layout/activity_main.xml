<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/layout_main"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Interaction" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/tvHeaderMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi P2P"
        android:id="@+id/btnWifi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="startWifiDirectActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth"
        android:id="@+id/btnBluetooth"
        android:layout_alignParentBottom="true"
        android:onClick="startBluetoothActivity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Swipe Me!"
        android:id="@+id/tvDataArea"
        android:layout_below="@+id/tvHeaderMain"
        android:layout_alignParentStart="true"
        android:layout_marginTop="174dp"
        android:layout_alignEnd="@+id/btnWifi"
        android:textSize="60dp" />


</RelativeLayout>
