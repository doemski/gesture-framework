    <objectAnimator
        android:valueFrom="0"
        android:valueTo="180"
        android:propertyName="rotationY"
        android:interpolator="@android:interpolator/accelerate_quad"
        android:duration="200" />

    <objectAnimator
        android:valueFrom="1.0"
        android:valueTo="0"
        android:propertyName="alpha"
        android:startOffset="100"
        android:duration="1" />
